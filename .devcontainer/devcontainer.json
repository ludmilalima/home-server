{
  "name": "Home-Server Development Container",
  "context": "..",
  "dockerFile": "Dockerfile",
  "workspaceMount": "source=home-server-workspace,type=volume,destination=/workspaces/home-server",
  "workspaceFolder": "/workspaces/home-server",
  "remoteUser": "home-server",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}